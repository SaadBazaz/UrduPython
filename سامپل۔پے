
طبقه شخص:
	وضح	__ابتدا__ (خود، نام):
		خود۔نام = نام

کچھ = ۰
چلو = حق
جبتک (کچھ <= ۱۰۰):
	چھاپ("تکرار #"، کچھ)
	اگر کچھ%۲۰ == ۰:
		جواب = داخله("کیا آپ ختم کرنا چاھتے ہیں؟ (ج/ن)")
		اگر جواب == "ج":
			چلو = باطل
			توڑ 
		ورنہ اگر جواب == "ن":
			چھاپ("آگے چلتے ہیں!")     
		ورنہ:
			چھاپ("سمجھ نہیں آئ۔۔۔")
			جاری
	کچھ += ۱

اگر چلو ہے باطل:
	میں = شخص("سعد")
	چھاپ("اللہ ہافظ،"،میں۔نام،"!")     
ورنہ: چھاپ("اختتام۔")